  drupal_add_js('https://apis.google.com/js/client.js?onload=handleClientLoad', 'external');
  
  return '<button id="authorize-button" style="visibility: hidden">Authorize</button><br/>
          <button id="make-api-call-button" style="visibility: hidden">Get Visits</button>';
}

